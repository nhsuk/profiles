{% extends 'layout.nunjucks' %}

{% block headerClass %}local-header{% endblock %}

{% block header %}
<h1 class="local-header__title">{{gp.name}}</h1>
{% endblock %}

{% block pageIntro %}
<div class="local-header__intro">
  <div class="grid-row">
    <div class="column--one-half">
      <p>{{ gp.location.address|safe | replace(",", "<br />") }}<br />{{gp.location.postcode}}</p>
    </div>
    <div class="column--one-half">
      <p>Telephone: {{ gp.phone}}
      <br /><a href="https://www.google.com/maps?q={{gp.location.latitude}},{{gp.location.longitude}}">See this surgery on a map</a></p>
    </div>
  </div>
</div>
{% endblock %}

