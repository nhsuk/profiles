{
  "name": "profiles",
  "version": "0.0.1",
  "description": "Web app to display useful information about GP practices Pharmacies",
  "main": "server.js",
  "scripts": {
    "build-css": "./css-build",
    "check-coverage": "istanbul check-coverage --config .istanbul.yml",
    "check-unit-coverage": "istanbul check-coverage --config .istanbul.unit.yml",
    "generate-unit-coverage": "export TZ=UTC; yarn run istanbul -- cover _mocha -- --recursive test/unit",
    "generate-coverage": "yarn run istanbul -- cover _mocha -- --recursive",
    "git-hook": "yarn run lint && yarn run generate-unit-coverage && yarn run check-unit-coverage",
    "istanbul": "NODE_ENV=test istanbul",
    "lint": "eslint --ext .js,.json .",
    "lint-watch": "esw --watch .",
    "postrewrite": "yarn run git-hook",
    "precommit": "yarn run git-hook",
    "prepush": "yarn run git-hook",
    "snyk": "snyk",
    "snyk-travis": "yarn run snyk -- test --org=nhsuk && yarn run snyk -- monitor --org=nhsuk",
    "start": "node app.js",
    "start-watch": "nodemon app.js | ./node_modules/bunyan/bin/bunyan & nodemon -e scss -x yarn run build-css -- compact",
    "test": "NODE_ENV=test mocha --recursive test",
    "test-watch": "yarn run test -- --watch --reporter min",
    "travis": "yarn run lint && yarn run generate-coverage && yarn run check-coverage && yarn run upload-coverage-coveralls && yarn run snyk-travis",
    "upload-coverage-coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nhsuk/profiles.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nhsuk/profiles/issues"
  },
  "homepage": "https://github.com/nhsuk/profiles#readme",
  "dependencies": {
    "body-parser": "^1.17.2",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "express": "^4.15.3",
    "helmet": "^3.6.1",
    "mongodb": "^2.2.28",
    "nhsuk-bunyan-logger": "^1.4.0",
    "node-sass": "^4.5.3",
    "normalize.css": "^7.0.0",
    "nunjucks": "^3.0.1",
    "object.values": "^1.0.4",
    "request": "^2.81.0",
    "require-environment-variables": "^1.1.2",
    "snyk": "^1.34.4",
    "timekeeper": "^1.0.0"
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "chai-http": "^3.0.0",
    "cheerio": "^1.0.0-rc.2",
    "coveralls": "^2.13.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-config-nhsuk": "^0.2.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-jsx-a11y": "^5.1.0",
    "eslint-plugin-mocha": "^4.10.1",
    "eslint-plugin-react": "^7.1.0",
    "eslint-watch": "^3.1.1",
    "husky": "^0.14.2",
    "istanbul": "^0.4.3",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0"
  },
  "greenkeeper": {
    "ignore": [
      "eslint",
      "eslint-plugin-jsx-a11y"
    ]
  }
}
