{
  "name": "profiles",
  "version": "1.6.0",
  "description": "Web app to display useful information about GP practices Pharmacies",
  "main": "server.js",
  "scripts": {
    "brunch-build": "yarn brunch build",
    "coverage-check": "istanbul check-coverage --config .istanbul.yml",
    "coverage-check-unit": "istanbul check-coverage --config .istanbul.unit.yml",
    "coverage-generate": "yarn istanbul -- cover _mocha -- --exit --recursive",
    "coverage-generate-unit": "export TZ=UTC--exit ; yarn istanbul -- cover _mocha -- --exit --recursive test/unit",
    "coverage-upload-coveralls": "cat ./coverage/lcov.info | coveralls",
    "git-hook": "yarn lint && yarn coverage-generate-unit && yarn coverage-check-unit",
    "istanbul": "NODE_ENV=test istanbul",
    "lint": "yarn lint-backend && yarn lint-frontend",
    "lint-backend": "eslint --ext .js,.json .",
    "lint-frontend": "eslint --no-ignore --no-eslintrc ./app/public/js",
    "lint-watch": "esw --watch .",
    "postrewrite": "yarn git-hook",
    "precommit": "yarn git-hook",
    "prepush": "yarn git-hook && yarn snyk test",
    "start": "node app.js",
    "start-watch": "yarn brunch watch -e development & nodemon app.js | ./node_modules/bunyan/bin/bunyan",
    "test": "NODE_ENV=test mocha --exit --recursive test",
    "test-ci": "yarn lint && yarn coverage-generate && yarn coverage-check && yarn coverage-upload-coveralls",
    "test-watch": "yarn test -- --watch --reporter min"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nhsuk/profiles.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nhsuk/profiles/issues"
  },
  "homepage": "https://github.com/nhsuk/profiles#readme",
  "dependencies": {
    "after-brunch": "^0.0.5",
    "body-parser": "^1.18.2",
    "brunch": "^2.10.12",
    "compression": "^1.7.1",
    "cookie-parser": "^1.4.3",
    "crypto-js": "^3.1.9-1",
    "elasticsearch": "^14.0.0",
    "express": "^4.16.0",
    "express-prom-bundle": "^3.2.1",
    "fingerprint-brunch": "^2.0.2",
    "helmet": "^3.9.0",
    "map-replace": "^1.0.2",
    "nhsuk-bunyan-logger": "^1.6.1",
    "nunjucks": "^3.0.1",
    "object.values": "^1.0.4",
    "on-headers": "^1.0.1",
    "request": "^2.83.0",
    "require-environment-variables": "^1.1.2",
    "sass-brunch": "^2.10.4",
    "snyk": "^1.49.1",
    "timekeeper": "^2.0.0",
    "uglify-es": "^3.1.8"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "cheerio": "^1.0.0-rc.2",
    "coveralls": "^3.0.0",
    "destroy": "^1.0.4",
    "eslint": "^4.10.0",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-config-nhsuk": "^0.8.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-mocha": "^4.11.0",
    "eslint-watch": "^3.1.3",
    "husky": "^0.14.3",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^5.0.0",
    "nodemon": "^1.12.1"
  }
}
